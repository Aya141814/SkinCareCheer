<div class="max-w-4xl mx-auto mb-6" id="comment-form">
    <%= form_with model: comment, url: board_comments_path(board), class: "space-y-4" do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div>
        <%= f.label :body, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_area :body, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50", rows: "4", placeholder: Comment.human_attribute_name(:body) %>
    </div>
    <%= f.submit t('comments.post'), class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    <% end %>
</div>