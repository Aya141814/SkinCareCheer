<div class="container mx-auto px-4">
    <div class="flex justify-center">
        <div class="w-full lg:w-2/3">
            <h1 class="text-3xl font-bold mb-6"><%= t('.title') %></h1>
            <%= form_with model: @board, class: "space-y-6", local: true, html: { multipart: true } do |f| %>
            <div>
                <%= render "shared/error_messages", object: f.object %>

                <%= render "boards/public_config", f: f %>

                <%= f.label :title, class: "block text-sm font-medium text-gray-700 mb-1" %>
                <%= f.text_field :title, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
            </div>

            <div class="mb-4" id="skincare_items_section">
                <%= f.label :skincare_items, 'スキンケアアイテム', class: "block text-sm font-medium text-gray-700 mb-2" %>
                <div class="grid grid-cols-2 gap-2">
                    <div class="flex items-center">
                        <%= f.check_box :skincare_items, { multiple: true, class: "mr-2" }, "化粧水", nil %>
                        <%= f.label :skincare_items_lotion, "化粧水", class: "text-sm" %>
                    </div>
                    <div class="flex items-center">
                        <%= f.check_box :skincare_items, { multiple: true, class: "mr-2" }, "乳液", nil %>
                        <%= f.label :skincare_items_milk, "乳液", class: "text-sm" %>
                    </div>
                    <div class="flex items-center">
                        <%= f.check_box :skincare_items, { multiple: true, class: "mr-2" }, "美容液", nil %>
                        <%= f.label :skincare_items_serum, "美容液", class: "text-sm" %>
                    </div>
                    <div class="flex items-center">
                        <%= f.check_box :skincare_items, { multiple: true, class: "mr-2" }, "クリーム", nil %>
                        <%= f.label :skincare_items_cream, "クリーム", class: "text-sm" %>
                    </div>
                    <div class="flex items-center">
                        <%= f.check_box :skincare_items, { multiple: true, class: "mr-2" }, "オイル", nil %>
                        <%= f.label :skincare_items_oil, "オイル", class: "text-sm" %>
                    </div>
                    <div class="flex items-center">
                        <%= f.check_box :skincare_items, { multiple: true, class: "mr-2" }, "日焼け止め", nil %>
                        <%= f.label :skincare_items_sunscreen, "日焼け止め", class: "text-sm" %>
                    </div>
                </div>
            </div>

            <div class="mb-4" id="skin_troubles_section">
                <%= f.label :skin_troubles, '肌トラブル', class: "block text-sm font-medium text-gray-700 mb-2" %>
                <div class="grid grid-cols-2 gap-2">
                    <div class="flex items-center">
                        <%= f.check_box :skin_troubles, { multiple: true, class: "mr-2" }, "乾燥", nil %>
                        <%= f.label :skin_troubles_dry, "乾燥", class: "text-sm" %>
                    </div>
                    <div class="flex items-center">
                        <%= f.check_box :skin_troubles, { multiple: true, class: "mr-2" }, "ニキビ", nil %>
                        <%= f.label :skin_troubles_acne, "ニキビ", class: "text-sm" %>
                    </div>
                    <div class="flex items-center">
                        <%= f.check_box :skin_troubles, { multiple: true, class: "mr-2" }, "シミ", nil %>
                        <%= f.label :skin_troubles_spots, "シミ", class: "text-sm" %>
                    </div>
                    <div class="flex items-center">
                        <%= f.check_box :skin_troubles, { multiple: true, class: "mr-2" }, "くすみ", nil %>
                        <%= f.label :skin_troubles_dullness, "くすみ", class: "text-sm" %>
                    </div>
                    <div class="flex items-center">
                        <%= f.check_box :skin_troubles, { multiple: true, class: "mr-2" }, "毛穴の開き", nil %>
                        <%= f.label :skin_troubles_pores, "毛穴の開き", class: "text-sm" %>
                    </div>
                    <div class="flex items-center">
                        <%= f.check_box :skin_troubles, { multiple: true, class: "mr-2" }, "敏感肌", nil %>
                        <%= f.label :skin_troubles_sensitive, "敏感肌", class: "text-sm" %>
                    </div>
                </div>
            </div>

            <div>
                <%= f.label :body, class: "block text-sm font-medium text-gray-700 mb-1" %>
                <%= f.text_area :body, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50", rows: "10" %>
            </div>
            <div class="mb-4">
                <%= f.label :board_image, class: "block text-gray-700 text-sm font-bold mb-2" %>
                <%= f.file_field :board_image, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", accept: 'image/*' %>
                <%= f.hidden_field :board_image_cache %>
            </div>
            <%= f.submit nil, class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
            <% end %>
        </div>
    </div>
</div>