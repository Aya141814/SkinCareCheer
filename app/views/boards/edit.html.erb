<% content_for(:title, t('.title')) %>

<div class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto">
        <h1 class="text-3xl font-bold mb-6 text-center"><%= t('.title') %></h1>

        <%= form_with model: @board, class: "space-y-6" do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <div>
            <%= f.label :title, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :title, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
        </div>

        <div class="mb-4" id="skincare_items_section">
            <%= f.label :skincare_items, 'スキンケアアイテム', class: "block text-sm font-medium text-gray-700 mb-2" %>
            <div class="grid grid-cols-2 gap-2">
                <div class="flex items-center">
                    <%= f.check_box :skincare_items, { multiple: true, checked: @board.skincare_items&.include?("化粧水"), class: "mr-2" }, "化粧水", nil %>
                    <%= f.label :skincare_items_lotion, "化粧水", class: "text-sm" %>
                </div>
                <div class="flex items-center">
                    <%= f.check_box :skincare_items, { multiple: true, checked: @board.skincare_items&.include?("乳液"), class: "mr-2" }, "乳液", nil %>
                    <%= f.label :skincare_items_milk, "乳液", class: "text-sm" %>
                </div>
                <div class="flex items-center">
                    <%= f.check_box :skincare_items, { multiple: true, checked: @board.skincare_items&.include?("美容液"), class: "mr-2" }, "美容液", nil %>
                    <%= f.label :skincare_items_serum, "美容液", class: "text-sm" %>
                </div>
                <div class="flex items-center">
                    <%= f.check_box :skincare_items, { multiple: true, checked: @board.skincare_items&.include?("クリーム"), class: "mr-2" }, "クリーム", nil %>
                    <%= f.label :skincare_items_cream, "クリーム", class: "text-sm" %>
                </div>
                <div class="flex items-center">
                    <%= f.check_box :skincare_items, { multiple: true, checked: @board.skincare_items&.include?("オイル"), class: "mr-2" }, "オイル", nil %>
                    <%= f.label :skincare_items_oil, "オイル", class: "text-sm" %>
                </div>
                <div class="flex items-center">
                    <%= f.check_box :skincare_items, { multiple: true, checked: @board.skincare_items&.include?("日焼け止め"), class: "mr-2" }, "日焼け止め", nil %>
                    <%= f.label :skincare_items_sunscreen, "日焼け止め", class: "text-sm" %>
                </div>
            </div>
        </div>

        <div>
            <%= f.label :body, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_area :body, rows: "10", class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
        </div>

        <div>
            <%= f.label :board_image, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.file_field :board_image, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500", accept: 'image/*' %>
            <%= f.hidden_field :board_image_cache %>
        </div>

        <div class="text-center">
            <%= f.submit nil, class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
        <% end %>
    </div>
</div>